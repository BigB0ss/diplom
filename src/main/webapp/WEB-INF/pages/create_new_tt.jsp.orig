                   <li><a href="#">Something else here</a></li>
                   <li role="separator" class="divider"></li>
                   <li><a href="#">Separated link</a></li>
                 </ul>
               </div>
                    <div>
                        <button class="btn-add" style="float:right" id="button"><span class="glyphicon glyphicon-plus"></span></button>
                    </div>
            </div>
            <button type="submit" value="Отправить" class="btn btn-secondary btn-lg"/ id="submit" style="margin-top:30px;"> Отправить</button>
