<div class="container">
    <div class="technical-task">

            <label>Название работы</label>
            <br>
            <textarea class="form-control" id="name"></textarea>
            <br>
            <label>Цель работы</label>
            <br>
            <textarea class="form-control" id="target"></textarea>
            <br>
            <label>Тип работы</label>
            <br>
            <select size="1" class="form-control selectpicker" id="type" >
                <c:forEach items="${types}" var="type">
                    <option><c:out value="${type.getType()}"/></option>
                </c:forEach>
            </select>
            <br>
            <label>Дисциплина</label>
            <br>
            <select class="form-control" id="discipline" >
                <c:forEach items="${disciplines}" var="discipline">
                    <option><c:out value="${discipline.getName()}"/></option>
                </c:forEach>
            </select>
            <br>
            <div class="claim">
                <div class="custom-claim" id="custom-claim-container">
                <div id="first-claim" class="claim-template">
                    <label>Пунк требований</label>
                    <br>
                    <input  class="form-control" type="text" />
                    <br>
                    <label>Описание</label>
                    <br>
                    <div style="width: 90%; float: left;">
                    <textarea class="form-control" type="text"></textarea>
                    </div>
                    <div >
                    <button class="btn btn-add" style="float:right" id="button"><span class="glyphicon glyphicon-plus"></span></button>
                    </div>
                </div>
                </div>
            </div>
            <div style="margin-top:70px;">
               <div class="dropdown" style="margin-top: 20px;">
